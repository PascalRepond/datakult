# Datakult - Environment Variables for Production
#
# Copy this file to .env and fill in your actual values
# Usage: docker compose -f docker/docker-compose.prod.yml up -d

# Security - REQUIRED
# Generate a secure key with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-very-long-secret-key-here-change-this

# Allowed hosts - Add your domain and local IP
# Example: datakult.example.com,192.168.1.100,localhost
ALLOWED_HOSTS=localhost,127.0.0.1

# Default superuser (created on first run)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=change-this-password

# API keys (optional - for importing metadata from TMDB)
# Leave empty to disable TMDB integration
TMDB_API_KEY=
